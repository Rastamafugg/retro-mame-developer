PROCEDURE decorate
  DIM PATH,T,Y:INTEGER
  OPEN #PATH,"/W3":WRITE
  RUN GFX2(PATH,"DWSET",7,0,0,80,24,3,2,2)
  RUN GFX2(PATH,"SELECT")
  Y=1
  RUN GFX2(PATH,"COLOR",3,2)
  FOR T=1 TO 185 STEP 3
    Y=Y+1
    RUN GFX2(PATH,"ELLIPSE",320,96,T,Y)
  NEXT T
  RUN GFX2(PATH,"COLOR",1,2)
  FOR T=185 TO 1 STEP -6
    RUN GFX2(PATH,"ELLIPSE",320,96,T,Y)
    IF INT(T/3)=T/3 THEN
      Y=Y+1
    ENDIF
  NEXT T
  RUN GFX2(1,"SELECT")
  RUN GFX2(PATH,"DWEND")
  CLOSE #PATH
  END